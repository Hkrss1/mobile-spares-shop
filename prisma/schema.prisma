generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  STAFF
  USER
}

enum TransactionType {
  INWARD
  OUTWARD
  RETURN
  ADJUSTMENT
}

model User {
  id        String   @id @default(cuid())
  mobile    String   @unique
  name      String
  password  String
  role      Role     @default(USER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Brand {
  id        String    @id @default(cuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  products  Product[]
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  products  Product[]
}

model Product {
  id          String   @id @default(cuid())
  name        String
  price       Float
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
  brand       Brand?   @relation(fields: [brandId], references: [id])
  brandId     String?
  description String
  image       String
  // stock    Int // Deprecated in favor of StockLevel
  specs       Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  stockLevels StockLevel[]
  transactions InventoryTransaction[]
}

model Supplier {
  id            String   @id @default(cuid())
  name          String
  contactPerson String?
  mobile        String?
  email         String?
  address       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  transactions  InventoryTransaction[]
}

model Location {
  id          String   @id @default(cuid())
  name        String   @unique // e.g., "Main Warehouse", "Shop Floor"
  address     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  stocks      StockLevel[]
  transactions InventoryTransaction[]
}

model StockLevel {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  locationId  String
  location    Location @relation(fields: [locationId], references: [id])
  quantity    Int      @default(0)
  updatedAt   DateTime @updatedAt

  @@unique([productId, locationId])
}

model InventoryTransaction {
  id          String          @id @default(cuid())
  type        TransactionType
  quantity    Int
  productId   String
  product     Product         @relation(fields: [productId], references: [id])
  locationId  String
  location    Location        @relation(fields: [locationId], references: [id])
  supplierId  String?
  supplier    Supplier?       @relation(fields: [supplierId], references: [id])
  orderId     String? 
  order       Order?          @relation(fields: [orderId], references: [id])
  performedBy String // User ID
  notes       String?
  createdAt   DateTime        @default(now())
}

model Order {
  id             String      @id @default(cuid())
  orderNumber    String      @unique
  customerName   String
  customerMobile String
  total          Float
  status         String      @default("processing")
  cancelledBy    String?     // "user" | "admin"
  trackingLink   String?
  createdAt      DateTime    @default(now())
  items          OrderItem[]
  transactions   InventoryTransaction[]
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  name      String
  price     Float
  quantity  Int
  image     String
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  entity    String   // e.g., "Product", "Order"
  entityId  String
  userId    String
  details   Json?
  createdAt DateTime @default(now())
}
